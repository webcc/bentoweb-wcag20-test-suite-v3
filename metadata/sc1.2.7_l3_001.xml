  <formalMetadata>
    <description>Document containing a link to a video file and a link to a text alternative. The text alternative contains only the auditory content presented in the video.</description>
    <title>Video with auditory information in text alternative</title>
    <dc:creator>evlach@aegean.gr</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2006-10-25</date>
    <status>accepted QA</status>
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label><html:acronym>XHTML</html:acronym>â„¢ 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
            <p>The test case is intended to fail because 
             the text alternative contains only a transcript 
             of the auditory information and not a description of the visual information
            </p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>oneExpert</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file hrefLang="en" xlink:href="../testfiles/sc1.2.7_l3_001.html"/>
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20070517_1.2_media-equiv-text-docs" primary="yes">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>The text alternative does not contain the visual information presented in the video.</p>
      </functionalOutcome>
      <techComment>
        <p>This test case does not map to a <html:acronym>WCAG</html:acronym> 2.0 technique or failure.</p>
      </techComment>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.2_media-equiv-text-docs" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>The text alternative does not contain the visual information presented in the video.</p>
      </functionalOutcome>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG1_19990505_1.1" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>The text alternative does not contain the visual information presented in the video.</p>
      </functionalOutcome>
    </rule>
  </rules>
