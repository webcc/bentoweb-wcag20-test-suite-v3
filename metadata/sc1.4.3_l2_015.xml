  <formalMetadata>
    <description>Document without colour and background-colour (see WCAG 2.0 Techniques H21).</description>
    <title>No colour and background-colour</title>
    <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
