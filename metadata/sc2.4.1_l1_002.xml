          </yesNoQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="4" type="screenreader with magnification" />
          <UserAgent minimumLevel="3" type="browser" />
        </experience>
        <disabilities>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
    </requiredTests>
