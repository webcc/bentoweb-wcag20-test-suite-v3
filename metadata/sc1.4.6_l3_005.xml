  <testCase complexity="atomic">
    <purpose>
      <p>This test case is intended to pass, because the background sound is 20 dB lower than the foreground audio content. Only the understandability of the speech output is tested here.</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>experts</testMode>
      </testModes>
      <scenario id="s01" name="Scenario s01">
                <userGuidance xml:lang="en">
                    <p>Note : it is possible that you are not able to perform the requested action.</p>
                    <p>Please make sure to have the sound turned on.</p>
                </userGuidance>
                <userGuidance xml:lang="nl">
                    <p>Opmerking : het is mogelijk dat u niet in staat bent de gevraagde actie uit te voeren.</p>
                    <p>Zorg ervoor dat het geluid is ingeschakeld.</p>
                </userGuidance>
        <questions>
                    <likertScale display="horizontal">
            <questionText xml:lang="en">
                            <p>How easy or difficult was it to hear the output of your assistive technology over the background sound?</p>
            </questionText>
            <questionText xml:lang="nl">
                            <p>Hoe makkelijk of moeilijk was het om de weergave van uw assistieve technologie te horen boven het achtergrondgeluid ?</p>
            </questionText>
                        <likertLevel number="1">
                            <label xml:lang="en">Very Easy</label>
                            <label xml:lang="nl">Zeer makkelijk</label>
                            <value>1</value>
                        </likertLevel>
                        <likertLevel number="2">
                            <label xml:lang="en">Easy</label>
                            <label xml:lang="nl">Makkelijk</label>
                            <value>2</value>
                        </likertLevel>
                        <likertLevel number="3">
                            <label xml:lang="en">Neither easy nor difficult</label>
                            <label xml:lang="nl">Niet makkelijk maar ook niet moeilijk</label>
                            <value>3</value>
                        </likertLevel>
                        <likertLevel number="4">
                            <label xml:lang="en">Difficult</label>
                            <label xml:lang="nl">Moeilijk</label>
                            <value>4</value>
                        </likertLevel>
                        <likertLevel number="5">
                            <label xml:lang="en">Very Difficult</label>
                            <label xml:lang="nl">Zeer moeilijk</label>
                            <value>5</value>
                        </likertLevel>
                    </likertScale>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="3" type="screenreader"/>
          <UserAgent minimumLevel="3" type="browser"/>
                    <Device minimumLevel="3" type="PC"/>
        </experience>
        <disabilities>
          <disability>blindness</disability>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
