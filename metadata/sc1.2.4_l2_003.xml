  <formalMetadata>
    <description>Document containing a link to a video file without audio description. The video file is emulating a real-time video stream.</description>
    <title>Live video with no audio description</title>
    <dc:creator>Reinhard.Ruemer@jku.at [c.meerveld@bartimeus.nl]</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-17</date>
    <status>accepted QA</status>
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label><html:acronym>XHTML</html:acronym>â„¢ 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
    <recommendation xlink:href="http://go.microsoft.com/fwlink/?LinkId=31334">
            <label>
                <html:acronym>ASF</html:acronym> Specification </label>
    </recommendation>
    <recommendation xlink:href="http://www.ofcom.org.uk/tv/ifi/guidance/tv_access_serv/audio_description_stnds/#content">
            <label>Guidance on Standards for Audio Description</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>This test case is intended to fail because no audio descriptions are provided in the multimedia file. 
        Only the existence of audio descriptions is tested.
      </p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>oneExpert</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file hrefLang="en" xlink:href="../testfiles/sc1.2.4_l2_003.html"/>
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20070517_1.2_media-equiv-audio-desc-only" primary="yes">
      <locations expectedResult="fail">
        <location column="51" line="9" xpath="/:html/body/:p[1]/:a[1]"/>
      </locations>
      <functionalOutcome>
        <p>There is no audio description that gives blind users access to the visual information in the video.</p>
      </functionalOutcome>
      <techComment>
        <p>This test case does not map to a <html:acronym>WCAG</html:acronym> 2.0 technique or failure.</p>
      </techComment>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.2_media-equiv-audio-desc-only" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>There is no audio description that gives blind users access to the visual information in the video.</p>
      </functionalOutcome>
      <techComment>
        <p>Online version: <html:span><html:a href="http://www.bentoweb.org/ts/XHTML1_TestSuite2/metadata/sc1.2.3_l2_003">sc1.2.3_l2_003</html:a></html:span>.</p>
      </techComment>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.2_media-equiv-live-ad" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>Multimedia content does provide audio descriptions.</p>
      </functionalOutcome>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG1_19990505_1.3" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>There is no audio description that gives blind users access to the visual information in the video.</p>
      </functionalOutcome>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG1_19990505_1.4" primary="no">
      <locations expectedResult="fail"/>
      <functionalOutcome>
        <p>There is no audio description that gives blind users access to the visual information in the video.</p>
      </functionalOutcome>
    </rule>
  </rules>
