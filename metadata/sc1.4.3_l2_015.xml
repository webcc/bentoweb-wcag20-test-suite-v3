  <testCase complexity="atomic">
    <purpose>
      <p>The test is intended to pass because no colour and no background are specified (sufficient technique H21).</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>automatic</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/sc1.4.3_l2_015.html" hrefLang="en"/>
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20070517_1.4_visual-audio-contrast-contrast" primary="yes">
      <locations expectedResult="pass"/>
      <functionalOutcome>
        <p>No colour and no background are specified.</p>
      </functionalOutcome>
      <techComment>
        <p>This test case maps to technique <html:span class="technique"><html:a href="http://www.w3.org/TR/2007/WD-WCAG20-TECHS-20070517/#H21">H21: Not specifying background color, not specifying text color, and not using CSS that changes those defaults</html:a></html:span></p>
      </techComment>
    </rule>
    <rule primary="no" id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.4_visual-audio-contrast-contrast">
      <locations expectedResult="pass"/>
      <functionalOutcome>
        <p>No colour and no background is specified.</p>
      </functionalOutcome>
      <techComment>
        <p>Online version: <html:span><html:a href="http://www.bentoweb.org/ts/XHTML1_TestSuite2/metadata/sc1.4.1_l2_015">sc1.4.1_l2_015</html:a></html:span>.</p>
      </techComment>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.4_visual-audio-contrast-contrast" primary="no">
      <locations expectedResult="pass"/>
      <functionalOutcome>
        <p>No colour and no background is specified.</p>
      </functionalOutcome>
    </rule>
  </rules>
