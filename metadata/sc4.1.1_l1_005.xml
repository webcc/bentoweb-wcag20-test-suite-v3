  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20070517_4.1_ensure-compat-parses" primary="yes">
      <locations expectedResult="pass">
        <location line="11" column="9" xpath="/h:html/h:body/h:dl/h:dd[1]" />
        <location line="12" column="9" xpath="/h:html/h:body/h:dl/h:dd[2]" />
