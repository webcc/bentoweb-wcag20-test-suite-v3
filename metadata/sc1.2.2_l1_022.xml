  <formalMetadata>
    <description>Document containing a link to a video file with audio description.</description>
    <title>Prerecorded video with audio description</title>
    <dc:creator>evlach@aegean.gr</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2004-2007</dc:rights>
    <date>2005-08-17</date>
    <status>validated</status><!--V_20080111--><!--previously sc1.2.6_l3_002 -->
        <!-- accepted for end user evaluation @@_2007-11-20 -->
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label><html:acronym>XHTML</html:acronym>â„¢ 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
    <recommendation xlink:href="http://www.ofcom.org.uk/tv/ifi/guidance/tv_access_serv/audio_description_stnds/#content">
            <label>Guidance on Standards for Audio Description</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>This test case is intended to pass because audio description is provided in the multimedia file. Only the availability of audio description is tested.
            </p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>oneExpert</testMode>
      </testModes>
      <scenario id="s01" name="Scenario s01 blind braille">
                <userGuidance xml:lang="en">
                    <p>A video fragment will be presented to you. Please make sure you have the sound turned on.</p>
                </userGuidance>
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
                            <p>Please, start the multimedia</p>
                            <p>Was there an audio description of what was happening visually in the multimedia?</p>
            </questionText>
            <optionYes value="1"/>
            <optionNo value="-1"/>
            <optionOther xml:lang="en">
                            <p>If yes, was the audio description helpful to you?</p>
            </optionOther>
            <space>
              <rows>5</rows>
              <columns>20</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="3" type="Braille display"/>
          <UserAgent minimumLevel="2" type="browser"/>
        </experience>
        <disabilities>
          <disability>blindness</disability>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
      <scenario id="s03" name="Scenario s03 lowvis mag">
                <userGuidance xml:lang="en">
                    <p>A video fragment will be presented to you. Please make sure you have the sound turned on.</p>
                </userGuidance>
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
                            <p>Please, start the multimedia</p>
                            <p>Was there an audio description of what was happening visually in the multimedia?</p>
            </questionText>
            <optionYes value="1"/>
            <optionNo value="-1"/>
            <optionOther xml:lang="en">
                            <p>If yes, was the audio description helpful to you?</p>
            </optionOther>
            <space>
              <rows>5</rows>
              <columns>20</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="3" type="screenreader with magnification"/>
          <UserAgent minimumLevel="2" type="browser"/>
        </experience>
        <disabilities>
          <disability>low vision</disability>
        </disabilities>
      </scenario>
      <scenario id="s04" name="Scenario s04 intellect">
                <userGuidance xml:lang="en">
                    <p>A video fragment will be presented to you. Please make sure you have the sound turned on.</p>
                </userGuidance>
        <questions>
          <yesNoOpenQuestion>
            <questionText xml:lang="en">
                            <p>Please, start the multimedia</p>
                            <p>Was there an audio description of what was happening visually in the multimedia?</p>
            </questionText>
            <optionYes value="1"/>
            <optionNo value="-1"/>
            <optionOther xml:lang="en">
                            <p>If yes, was the audio description helpful to you?</p>
            </optionOther>
            <space>
              <rows>5</rows>
              <columns>20</columns>
            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <UserAgent minimumLevel="2" type="browser"/>
        </experience>
        <disabilities>
          <disability>intellectual disability</disability>
        </disabilities>
      </scenario>
    </requiredTests>
    <files>
      <file hrefLang="en" xlink:href="../testfiles/sc1.2.2_l1_022.html"/>
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20070517_1.2_media-equiv-audio-desc" primary="yes">
      <locations expectedResult="pass">
        <location column="52" line="9" xpath="/h:html/h:body/h:p[1]/h:a[1]"/>
      </locations>
      <functionalOutcome>
        <p>The video contains audio description of the action.</p>
      </functionalOutcome>
      <techComment>
                <!-- @@todo create similar test case with SMIL --> 
        <p>This test case maps to technique <html:span class="technique"><html:a href="http://www.w3.org/TR/2007/WD-WCAG20-TECHS-20070517/#G78">G78: Providing a sound track that includes audio description</html:a></html:span> as the primary sound track.</p>
      </techComment>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.2_media-equiv-extended-ad" primary="no">
      <locations expectedResult="fail">
        <location column="52" line="9" xpath="/h:html/h:body/h:p[1]/h:a[1]"/>
      </locations>
      <functionalOutcome>
        <p>The video contains audio description of the action.</p>
      </functionalOutcome>
      <techComment>
        <p>Online version: <html:span><html:a href="http://www.bentoweb.org/ts/XHTML1_TestSuite2/metadata/sc1.2.6_l3_002">sc1.2.6_l3_002</html:a></html:span>.</p>
      </techComment>
    </rule>
  </rules>
